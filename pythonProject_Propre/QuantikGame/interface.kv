<MenuHistorique>:
    name: "historique"
    canvas.before:
        Color:
            rgb: (0.5647058823529412, 0.9333333333333333, 0.5647058823529412, 1.0)
        Rectangle:
            pos: self.pos
            size: self.size
    on_enter: root.getHistorique()
    on_leave: root.removeHistorique()
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: self.height * 0.9
            color: (0, 0, 0, 1)
            underline: True
            size_hint: 1, 0.1
            text: "Historique"
        ScrollView:
            do_scroll_x: False
            bar_pos_y: "right"
            bar_margin: 185
            bar_width: 30
            bar_inactive_color: 0.3, 0.3, 0.3, 1
            GridLayout:
                spacing: 15
                size_hint_y: None
                height: self.minimum_height * 9
                cols: 1
                id: historique
                size_hint_x: 1
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "bottom"
        padding: 20
        Button:
            background_normal: 'QuantikGame/imgs/back.png'
            background_down: 'QuantikGame/imgs/back.png'
            size_hint: 0.08, 0.08
            on_release: app.root.current = "principale"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        padding: 20
        id: winrate